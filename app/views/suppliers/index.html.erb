<h1>Suppliers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <%= render 'shared/table_actions_theaders' %>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.name %></td>
        <%= render 'shared/table_action_rows', item: supplier, edit_path: edit_supplier_path(supplier), destroy_name: "#{supplier.name}" %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="action-buttons">
  <%= render 'shared/link_button', text: 'New Supplier', path: new_supplier_path %>
</div>
