<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Rating</th>
      <th>State</th>
      <th>Customer</th>
      <th>Book</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |reviews| %>
      <tr>
        <td><%= reviews.title %></td>
        <td><%= reviews.body %></td>
        <td><%= reviews.rating %></td>
        <td><%= reviews.state %></td>
        <td><%= reviews.customer %></td>
        <td><%= reviews.book %></td>
        <td><%= link_to 'Show', reviews %></td>
        <td><%= link_to 'Edit', edit_reviews_path(reviews) %></td>
        <td><%= link_to 'Destroy', reviews, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reviews', new_reviews_path %>
