<%# This partial assumes there is a local called order  %>

<table class="books-and-prices">
  <tr class="header">
    <th class="title">Title</th>
    <th class="price">Price</th>
  </tr>

  <% order.books.each do |book| %>
    <tr class="book">
      <td class="title"><%= book.title %></td>
      <td class="price"><%= number_with_precision(book.price, precision: 2) %></td>
    </tr>
  <% end %>
</table>
