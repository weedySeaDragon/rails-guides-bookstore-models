<h1>Order</h1>

<p>
  <strong>Date submitted:</strong>
  <%= @order.date_submitted %>
</p>

<p>
  <strong>Customer:</strong>
  <%= @order.customer.display_name %>
</p>

<p>
  <strong>Status:</strong>
  <%= @order.status %>
</p>

<div class="books-ordered">
  <p class="books-ordered-title">Books ordered:</p>
  <%= render 'books_and_prices_table', order: @order %>
</div>

<p>
  <strong>Subtotal:</strong>
  <%= number_to_currency(@order.subtotal) %>
</p>

<p>
  <strong>Shipping:</strong>
  <%= number_to_currency(@order.shipping) %>
</p>

<p>
  <strong>Tax:</strong>
  <%= number_to_currency(@order.tax) %>
</p>

<p>
  <strong>Total:</strong>
  <%= number_to_currency(@order.total) %>
</p>


<%= render 'action_buttons_edit_back', item: 'order', edit_path: edit_order_path(@order), items: 'orders', back_to_path: orders_path %>
