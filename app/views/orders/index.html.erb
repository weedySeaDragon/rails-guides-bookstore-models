<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Date submitted</th>
      <th>Customer</th>
      <th>Status</th>
      <th>Subtotal</th>
      <th>Shipping</th>
      <th>Tax</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.date_submitted %></td>
        <td><%= order.customer.display_name %></td>
        <td><%= order.status %></td>
        <td><%= order.subtotal %></td>
        <td><%= order.shipping %></td>
        <td><%= order.tax %></td>
        <td><%= order.total %></td>
        <%= render 'shared/table_action_rows', item: order, edit_path: edit_order_path(order), destroy_name: "the order made on #{order.date_submitted} by #{order.customer.display_name}" %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="action-buttons">
  <%= render 'shared/link_button', text: 'New Order', path: new_order_path %>
</div>
