<h1>Authors</h1>

<table class="table table-sm table-striped" id="tbl-authors">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>First name</th>
      <th>Last name</th>
      <%= render 'shared/table_actions_theaders' %>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.title %></td>
        <td><%= author.first_name %></td>
        <td><%= author.last_name %></td>
        <%= render 'shared/table_action_rows', item: author, edit_path: edit_author_path(author), destroy_name: author.display_name %>

      </tr>
    <% end %>
  </tbody>
</table>

<div class="action-buttons">
  <%= render 'shared/link_button', text: 'New Author', path: new_author_path %>
</div>
